<div>
  <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました。
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list',book:@book, user:@books.user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user) do %>
                <%= image_tag @books.user.get_profile_image(40, 50) %>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @books.title, book_path %>
              </td>
              <td><%= @books.body %></td>
              <% if @books.user == @user %>
              <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
              <td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
