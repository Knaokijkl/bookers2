<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました。
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= form_with model: @book do |f| %>
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"名前", class:"form-control"%>
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id: "book_opinion", placeholder:"名前", class:"form-control" %>

          <%= f.submit "Update Book", class:"btn btn-success" %>
        <% end %>
      </div>
      <%= link_to "Show", book_path %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>


